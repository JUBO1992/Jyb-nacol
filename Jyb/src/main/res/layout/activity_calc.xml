<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gameview" >

    <EditText
        android:id="@+id/rsText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="420dp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/bg_gameview"
        android:editable="false"
        android:gravity="right|bottom"
        android:padding="10dp"
        android:textColor="#FFF"
        android:textSize="40dp" />
    <EditText
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="358dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/bg_gameview"
        android:editable="false"
        android:gravity="right"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#FFF"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="356dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="1dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_clean"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/btnbg_func"
                android:gravity="center"
                android:text="C"
                android:textColor="#ff6600"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btn_del"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/btnbg_func"
                android:gravity="center"
                android:text="DEL"
                android:textColor="#ffffff"
                android:textSize="32dp" />

            <!-- รท -->
            <Button
                android:id="@+id/btn_divide"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/btnbg_func"
                android:gravity="center"
                android:text="/"
                android:textColor="#ffffff"
                android:textSize="32dp" />

            <!-- ร -->
            <Button
                android:id="@+id/btn_multiplay"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/btnbg_func"
                android:gravity="center"
                android:text="*"
                android:textColor="#ffffff"
                android:textSize="32dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_7"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/btnbg_num"
                android:gravity="center"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/btnbg_num"
                android:gravity="center"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/btnbg_num"
                android:gravity="center"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/btnbg_func"
                android:gravity="center"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="32dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_4"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/btnbg_num"
                android:gravity="center"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/btnbg_num"
                android:gravity="center"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/btnbg_num"
                android:gravity="center"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/btnbg_func"
                android:gravity="center"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="32dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_1"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/btnbg_num"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#ffffff"
                        android:textSize="32dp" />

                    <Button
                        android:id="@+id/btn_2"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/btnbg_num"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#ffffff"
                        android:textSize="32dp" />

                    <Button
                        android:id="@+id/btn_3"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/btnbg_num"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#ffffff"
                        android:textSize="32dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp" >

                    <Button
                        android:id="@+id/btn_0"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/btnbg_num"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="32dp" />

                    <Button
                        android:id="@+id/btn_point"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/btnbg_num"
                        android:gravity="center"
                        android:text="."
                        android:textColor="#ffffff"
                        android:textSize="32dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/btn_equal"
                    android:layout_width="60dp"
                    android:layout_height="141dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnbg_equal"
                    android:gravity="center"
                    android:text="="
                    android:textColor="#ffffff"
                    android:textSize="32dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>